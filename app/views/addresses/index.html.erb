<p id="notice"><%= notice %></p>

<h1>Address Book</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.name %></td>
        <td><%= address.surname %></td>
        <td><%= address.address %></td>
        <td><%= address.phone %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <% if @previous_cursor %>
    <%= link_to "Previous Page", addresses_path(cursor: @previous_cursor) %>
  <% end %>
  <% if @next_cursor%>
    <%= link_to "Next Page", addresses_path(cursor: @next_cursor) %>
  <% end %>
</div>
<br>

<%= link_to 'New Address', new_address_path %>
